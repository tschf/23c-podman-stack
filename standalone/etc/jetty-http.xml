<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">
<Configure id="Server" class="org.eclipse.jetty.server.Server">
    <Ref id="Handlers">
      <Call name="addHandler">
        <Arg>
          <!-- Docs link for specifying format of the access log: https://docs.oracle.com/en/database/oracle/oracle-rest-data-services/23.2/ordig/miscellaneous-configuration-options-of-ORDS.html#GUID-A3798C5A-C6C6-40A2-826F-CE1CF0B8DDE2 -->
          <!-- Format string/tokens as specified in: https://eclipse.dev/jetty/javadoc/jetty-9/org/eclipse/jetty/server/CustomRequestLog.html -->
          <New id="RequestLog" class="org.eclipse.jetty.server.handler.RequestLogHandler">
            <Set name="requestLog">
            	<New id="RequestLogImpl" class="org.eclipse.jetty.server.CustomRequestLog">
                <!-- Param 0: org.eclipse.jetty.server.RequestLogWriter -->
                <Arg>
                  <New class="org.eclipse.jetty.server.RequestLogWriter">
                    <Set name="append">false</Set>
                    <Set name="filename"><Property name="jetty.logs" default="/var/log" />/ords-access.log</Set>
                    <Set name="filenameDateFormat">yyyy_MM_dd</Set>
                    <Set name="retainDays">1</Set>
                    <Set name="timeZone">Australia/Sydney</Set>
                  </New>
                </Arg>
                <!-- Param 1: String -->
                <Arg>
                  <Get class="org.eclipse.jetty.server.CustomRequestLog" name="EXTENDED_NCSA_FORMAT" />
                </Arg>
              </New>
            </Set>
          </New>
        </Arg>
      </Call>
    </Ref>
</Configure>
